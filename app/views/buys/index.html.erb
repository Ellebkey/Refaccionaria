<h1>Listing buys</h1>

<table>
  <thead>
    <tr>
      <th>Total</th>
      <th>Fecha</th>
      <th>Admin user</th>
      <th>Provider</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @buys.each do |buy| %>
      <tr>
        <td><%= buy.total %></td>
        <td><%= buy.fecha %></td>
        <td><%= buy.admin_user %></td>
        <td><%= buy.provider %></td>
        <td><%= link_to 'Show', buy %></td>
        <td><%= link_to 'Edit', edit_buy_path(buy) %></td>
        <td><%= link_to 'Destroy', buy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Buy', new_buy_path %>
