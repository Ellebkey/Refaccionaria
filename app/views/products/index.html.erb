<h1>Listing products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Clave</th>
      <th>Description</th>
      <th>Stock</th>
      <th>Avaible</th>
      <th>Pricepublic</th>
      <th>Pricedesc</th>
      <th>Pricemaxd</th>
      <th>Categproduc</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.clave %></td>
        <td><%= product.description %></td>
        <td><%= product.stock %></td>
        <td><%= product.avaible %></td>
        <td><%= product.pricepublic %></td>
        <td><%= product.pricedesc %></td>
        <td><%= product.pricemaxd %></td>
        <td><%= product.categproduc %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

